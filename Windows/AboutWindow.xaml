<Window x:Class="VPM.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About VAM Package Manager"
        Height="620"
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dependency Card Style -->
        <Style TargetType="Border" x:Key="DependencyCard">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Hyperlink Style -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with gradient background -->
        <Border Grid.Row="0" Padding="30,28">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0078D4" Offset="0"/>
                    <GradientStop Color="#005A9E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="VAM Package Manager" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="VersionTextBlock" 
                               FontSize="14" 
                               Foreground="#D0E8FF"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="A modern package manager for VirtAMate" 
                               FontSize="13" 
                               Foreground="#B8D4F0"
                               FontStyle="Italic"/>
                </StackPanel>
                <!-- GitHub Button -->
                <Button Grid.Column="1" 
                        Style="{StaticResource SecondaryButton}"
                        Background="#24292F"
                        Foreground="White"
                        BorderThickness="0"
                        Click="GitHubButton_Click"
                        VerticalAlignment="Center"
                        ToolTip="View on GitHub">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" 
                              Fill="White" 
                              Width="16" Height="16" 
                              Stretch="Uniform"
                              Margin="0,0,8,0"/>
                        <TextBlock Text="GitHub" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,24,30,20">
                
                <!-- Build Information Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="BUILD INFORMATION" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Margin="0,0,0,14"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Framework" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FrameworkTextBlock" FontWeight="SemiBold" FontSize="12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Platform" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" FontSize="12" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PlatformTextBlock" FontWeight="SemiBold" FontSize="12" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Dependencies Section -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="DEPENDENCIES" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Margin="0,0,0,14"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    
                    <!-- SharpCompress -->
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="SharpCompress" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="0.37.2" FontSize="11" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="8,2,0,0"/>
                                </StackPanel>
                                <TextBlock Text="Archive extraction and compression library" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <Hyperlink Click="SharpCompressLink_Click">View</Hyperlink>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- NetVips -->
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="NetVips" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="3.1.0" FontSize="11" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="8,2,0,0"/>
                                </StackPanel>
                                <TextBlock Text="High-performance image processing library (libvips bindings)" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <Hyperlink Click="NetVipsLink_Click">View</Hyperlink>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- GraphShape -->
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="GraphShape" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="1.2.1" FontSize="11" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="8,2,0,0"/>
                                </StackPanel>
                                <TextBlock Text="Graph layout algorithms and WPF controls" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <Hyperlink Click="GraphShapeLink_Click">View</Hyperlink>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- RecyclableMemoryStream -->
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="RecyclableMemoryStream" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="3.0.1" FontSize="11" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="8,2,0,0"/>
                                </StackPanel>
                                <TextBlock Text="Microsoft's pooled memory stream for reduced allocations" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <Hyperlink Click="RecyclableMemoryStreamLink_Click">View</Hyperlink>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- ImageListView -->
                    <Border Style="{StaticResource DependencyCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ImageListView" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                                <TextBlock Text="Image preview grid control for thumbnails" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <Hyperlink Click="ImageListViewLink_Click">View</Hyperlink>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer with Close button -->
        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                Padding="30,16">
            <Grid>
                <TextBlock HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">
                    <Run Text="Made with"/>
                    <Run Text="â™¥" Foreground="#E74C3C"/>
                    <Run Text="for the VAM community"/>
                </TextBlock>
                <Button Content="Close" 
                        Click="CloseButton_Click" 
                        IsDefault="True" 
                        Style="{StaticResource ModernButton}"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
