<Window x:Class="VPM.Windows.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Packages" 
        Height="500" 
        Width="700"
        MinHeight="300"
        MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        Foreground="White"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Modern scrollbar style -->
        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Width" Value="12"/>
        </Style>
        
        <!-- Download item style -->
        <Style x:Key="DownloadItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <!-- Title bar button style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Title bar close button style -->
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C42B1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Downloading Packages" 
                               FontSize="12" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="12,0,0,0"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="─" 
                                Width="46" 
                                Height="32" 
                                Click="MinimizeButton_Click"
                                Style="{StaticResource TitleBarButtonStyle}"/>
                        <Button Content="✓" 
                                Width="46" 
                                Height="32" 
                                Click="WindowCloseButton_Click"
                                Style="{StaticResource TitleBarCloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Header -->
            <Border Grid.Row="1" Background="#2D2D30" Padding="16" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Package Downloads" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock x:Name="SummaryText" Text="Preparing downloads..." FontSize="12" Foreground="#B0B0B0" Margin="0,4,0,0"/>
                </StackPanel>
                
                <Button x:Name="CancelAllButton" 
                        Grid.Column="1"
                        Content="Cancel All" 
                        Click="CancelAllButton_Click"
                        MinWidth="120"
                        Height="32"
                        Background="#C42B1C"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#C42B1C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="{StaticResource CornerRadiusValue}" 
                                                Padding="12,6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Download items list -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1E1E1E">
            <Border CornerRadius="0,0,8,8">
                <ItemsControl x:Name="DownloadItemsControl" Margin="16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DownloadItemStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MinHeight="32"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                
                                <!-- Package name and status -->
                                <Grid Grid.Row="0" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding PackageName}" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding StatusText}" 
                                               FontSize="12"
                                               Foreground="{Binding StatusColor}"
                                               Margin="8,0,8,0"
                                               VerticalAlignment="Center"/>
                                    
                                    <Button Grid.Column="2"
                                            Content="{Binding CancelButtonText}"
                                            Width="24"
                                            Height="24"
                                            Background="{Binding CancelButtonColor}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontSize="12"
                                            Cursor="Hand"
                                            ToolTip="{Binding CancelButtonTooltip}"
                                            Visibility="{Binding CancelButtonVisibility}"
                                            Tag="{Binding PackageName}"
                                            Click="CancelDownloadButton_Click"
                                            VerticalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#C42B1C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E81123"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                                
                                <!-- Progress text -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding ProgressText}" 
                                           FontSize="11"
                                           Foreground="#B0B0B0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </Border>
        </ScrollViewer>
        </Grid>
    </Border>
</Window>

