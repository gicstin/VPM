<Window x:Class="VPM.ConfirmDeletionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Deletion"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        MinWidth="420"
        MinHeight="260">
    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="8" Background="#1E1E1E" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                <Ellipse Width="36" Height="36" Fill="#FFC107" StrokeThickness="0" Opacity="0.85"/>
                <TextBlock Text="⚠" FontSize="20" FontWeight="Bold" Foreground="#1E1E1E" Margin="-28,0,0,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleTextBlock" Text="Confirm Deletion" FontSize="18" FontWeight="SemiBold" Margin="16,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="MessageTextBlock" Grid.Row="2" TextWrapping="Wrap" FontSize="14" Margin="0"/>

            <Border Grid.Row="4" Background="#232323" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="12" MinHeight="80">
                <ItemsControl x:Name="DetailsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="• " FontSize="13" Margin="0,0,4,4"/>
                                <TextBlock Text="{Binding}" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,4"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <TextBlock x:Name="WarningTextBlock" Grid.Row="6" TextWrapping="Wrap" FontSize="13" Foreground="#FFCDD2"/>

            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="110"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Margin" Value="8,0,0,0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Background" Value="#D32F2F"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="{StaticResource CornerRadiusValue}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsDefault" Value="True">
                                <Setter Property="Background" Value="#F44336"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="ConfirmButton" Content="Delete" Click="ConfirmButton_Click" IsDefault="True"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Background="#424242" Foreground="#E0E0E0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>